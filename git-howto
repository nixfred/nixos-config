# Generate an SSH key
ssh-keygen -t ed25519 -C "your-email@example.com"

# Start the SSH agent and add the key
eval "$(ssh-agent -s)"
ssh-add ~/.ssh/id_ed25519

# Output the public key to add it to GitHub
cat ~/.ssh/id_ed25519.pub
echo "Copy the above key and add it to GitHub under Settings > SSH and GPG keys > New SSH Key"

# Configure SSH for GitHub
echo -e "Host github.com\n    HostName github.com\n    User git\n    IdentityFile ~/.ssh/id_ed25519" >> ~/.ssh/config

# Test the SSH connection
ssh -T git@github.com

# Clone the repository
git clone git@github.com:nixfred/nixos-config.git
